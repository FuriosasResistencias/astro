---
import { getCollection } from "astro:content";
import MarkdownPostLayout from "../../layouts/MarkdownPostLayout.astro";

const { slug } = Astro.params;
const allPosts = await getCollection("noticias");

// Find the post based on the slug
const post = allPosts.find((p) => p.slug === slug);
if (!post) {
  throw new Error(`Post not found: ${slug}`);
}

// getStaticPaths function to tell Astro which paths to pre-render
export async function getStaticPaths() {
  const posts = await getCollection("noticias");
  return posts.map((post) => ({
    params: { slug: post.slug }, // The slug is used to generate the URL
  }));
}
---

<MarkdownPostLayout frontmatter={post.data}>
  {post.body} <!-- Displays the main content of the post -->
</MarkdownPostLayout>